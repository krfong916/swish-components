{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": ["components/**/*"],
  "exclude": ["node_modules"]
}
